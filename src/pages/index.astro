---
import Header from '../components/Header.astro';
import PartnerBrands from '../components/PartnerBrands.astro';
import IntroSection from '../components/IntroSection.astro';
import DesignSelector from '../components/DesignSelector.jsx';
import ContactForm from '../components/ContactForm.astro';
const year = new Date().getFullYear();
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/png" href="/images/favicon.png" />
    <title>Baha Painting | Limewash & Roman Clay</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Baha Painting offers premium limewash, Roman clay, and Venetian plaster finishes in Los Angeles." />
    <link rel="stylesheet" href="/styles/global.css" />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <Header />
    <IntroSection />
    <DesignSelector client:visible />
    <ContactForm />
    <PartnerBrands />
    <footer>
      <p>
        +1 310 912 67 10 Â· 
        <a href="#" id="copy-email" onclick="copyEmail(event)">info@bahapainting.com</a>
      </p>
      <p>&copy; {year} Baha Painting. All rights reserved.</p>
    </footer>
    <script>
          // Extend the Window interface to include the copyEmail property
          declare global {
            interface Window {
              copyEmail: (event: Event) => void;
            }
          }
    
          // Attach the function to the global window object
          window.copyEmail = function (event) {
            event.preventDefault(); // Prevent default link behavior
            const email = "info@bahapainting.com";
            navigator.clipboard.writeText(email).then(() => {
              alert("Email address copied to clipboard!");
            }).catch((err) => {
              console.error("Failed to copy email: ", err);
            });
          };
        </script>
  </body>
</html>